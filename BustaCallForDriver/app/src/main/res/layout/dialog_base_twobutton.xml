<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="320dp"
    android:layout_height="180dp"
    android:background="@color/AppColorWhite">

    <TextView
        android:id="@+id/dialog_base_two_button_text"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="130dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_weight="1"
            android:id="@+id/dialog_base_two_button_cancel"
            android:textColor="@color/colorPrimary"
            android:background="@color/AppColorLightGray"
            android:textSize="28sp"
            android:text="취소"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/dialog_base_two_button_enter"
            android:textColor="@color/AppColorWhite"
            android:background="@color/colorPrimary"
            android:textSize="28sp"
            android:text="확인"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>